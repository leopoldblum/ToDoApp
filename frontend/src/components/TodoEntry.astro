---
import Checkmark from "../components/Checkmark.astro";
import Delete from "./DeleteTodo.astro";
const { todoEntry } = Astro.props;
---

<!-- your template here -->
<table class="todo-table">
    <tr>
        <th class="todo-content">
            <h2 class="todo-title">
                Title: {todoEntry.title}
            </h2>
            <p class="todo-description">
                description: {todoEntry.desc}
            </p>
        </th>
        <th class="checkmark">
            <Checkmark todoEntry={todoEntry} />
            <Delete todoEntry={todoEntry} />
        </th>
    </tr>
</table>

<style>
    .todo-table {
        width: 100%;
        background-color: #23262d;
        border: #50535a;
        border-radius: 7px;

        margin-top: 3%;
    }

    .todo-table:is(:hover, :focus-within) {
        background-color: rgb(56, 56, 56);
    }

    .checkmark {
        width: 25%;
        padding-right: 0%;
    }

    .todo-content {
        /*background-color: antiquewhite;*/
        padding-left: 5%;

        h2 {
            text-align: left;
        }
    }

    .todo-description {
        text-align: left;
    }
</style>
